{
  "name": "Channel",
  "plural": "channels",
  "base": "PersistedModel",
  "strict": true,
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "protected": [
    "location"
  ],
  "hidden": ["ownerId"],
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string"
    },
    "icon": {
      "type": "string"
    },
    "createdAt": {
      "type": "date",
      "default": "$now"
    },
    "updatedAt": {
      "type": "date",
      "default": "$now"
    },
    "lastActivity": {
      "type": "date",
      "default": "$now"
    },
    "color": {
      "type": "string"
    },
    "location": {
      "type": "geopoint",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "messages": {
      "type": "hasMany",
      "model": "Message",
      "foreignKey": ""
    },
    "users": {
      "type": "hasAndBelongsToMany",
      "model": "AppUser",
      "foreignKey": "userId"
    },
    "owner": {
      "type": "hasOne",
      "model": "AppUser",
      "foreignKey": "ownerId",
      "options": {
        "disableInclude": true
      }
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "nearby"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "channelMember",
      "permission": "ALLOW",
      "property": "findById"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "create"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "channelMember",
      "permission": "ALLOW",
      "property": "__get__messages"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "channelMember",
      "permission": "ALLOW",
      "property": "__count__messages"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "channelMember",
      "permission": "ALLOW",
      "property": "__get__users"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "channelMember",
      "permission": "ALLOW",
      "property": "__count__users"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "channelAdmin",
      "permission": "ALLOW",
      "property": "updateById"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "channelAdmin",
      "permission": "ALLOW",
      "property": "destroyById"
    }
  ],
  "methods": {}
}
